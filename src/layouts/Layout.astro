---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Bills Co. - Professional Trade Services">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer base {
    html {
      scroll-behavior: smooth;
    }
    
    input, textarea {
      @apply border-gray-300;
    }
  }

  .gradient-background {
    background: linear-gradient(135deg, #0A0A0A 0%, #111111 50%, #0A0A0A 100%);
    background-size: 200% 200%;
    animation: gradient 15s ease infinite;
  }

  .section-gradient {
    background: linear-gradient(to bottom, rgba(17, 17, 17, 0.3), rgba(10, 10, 10, 0.8));
    backdrop-filter: blur(100px);
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>